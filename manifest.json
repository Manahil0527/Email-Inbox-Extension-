{
    "manifest_version": 3,
    "name": "Inbox Flow",
    "version": "1.0.0",
    "description": "Enhance your Gmail experience with a clean and modern inbox management tool.",
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://mail.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "utils/gmailSelectors.js",
                "content/contentScript.js"
            ],
            "css": [
                "content/styles.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background/background.js"
    }
}